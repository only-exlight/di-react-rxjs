{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitUseStrict": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "types": [
            "react",
            "react-dom"
        ],
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*",
        "./lib/**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}

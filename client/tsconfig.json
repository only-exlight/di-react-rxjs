{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitUseStrict": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "lib": ["es6", "dom", "es2015.reflect"],
        "types": [
            "react",
            "react-dom",
            "reflect-metadata"
        ],
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*",
    ]
}
